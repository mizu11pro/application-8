
<h1>Editing Book</h1>

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
<div class="field">
<label for="title">Title</label>
<%= f.text_field :title %>
</div>

<div class="field">
<label for="body">Body</label>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Update Book' %>
</div>
<% end %>

<div class="visited">
<%= link_to 'Show', booklist_path(@book.id) %>
|
<%= link_to 'Back', books_path %>
</visited>
