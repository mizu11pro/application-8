<h1>Editing Book</h1>
<%= form_with model:@book, url:"/booklists/#{@book.id}", local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
<%= link_to 'show', booklist_path(@book.id) %>
<%= link_to 'back', booklists_path %>

<p id="notice">
    <%= notice %> Book was successfully updated.
</p>