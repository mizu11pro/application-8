<table>
    <p id="notice"></p>
  <h1 class="head">Books</h1>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr class="list">
  <td class="list-text"><%= book.title %></td>
  <td class="list-text"><%= book.body %></td>
  <td class="list-text"><%= link_to 'Show', booklist_path(book.id) %></td>
  <td class="list-text"><%= link_to 'Edit', edit_booklist_path(book.id) %></td>
  <td class="list-text"><%= link_to 'Destroy', destroy_booklist_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
<% end %>
</tbody>
</table>

<!--<form class="new_book">-->
<h2>New Book</h2>

<%= form_with model: @book, method: :post, local:true do |f| %>
<div class="field">
<label for="title">Title</label>
<%= f.text_field :title %>
</div>

<div class="field">
<label for="body">Body</label>
<%= f.text_area :body %>
</div>

<div class="actions">
<%= f.submit 'Create Book' %>
</div>
<% end %>
<!--</form>-->
